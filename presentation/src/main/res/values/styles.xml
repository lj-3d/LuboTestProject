<resources>

    <style name="LLHMatchWrap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="LLHWrapMatch">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="LLHMatchMatch">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="LLVMatchWrap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="LLVWrapMatch">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="LLVMatchMatch">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="TxtRegular" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/txt_size_16</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/txt_white</item>
        <item name="android:fontFamily">@font/cc_pragmatica_regular</item>
        <item name="fontFamily">@font/cc_pragmatica_regular</item>
    </style>

    <style name="TxtMedium" parent="TxtRegular">
        <item name="android:textSize">@dimen/txt_size_16</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:fontFamily">@font/cc_pragmatica_medium</item>
        <item name="fontFamily">@font/cc_pragmatica_medium</item>
    </style>

    <style name="TxtBold" parent="TxtRegular">
        <item name="android:textSize">@dimen/txt_size_16</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:fontFamily">@font/cc_pragmatica_bold</item>
        <item name="fontFamily">@font/cc_pragmatica_bold</item>
    </style>

    <style name="EdTxtRegular" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/txt_size_16</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/txt_white</item>
        <item name="android:background">@null</item>
        <item name="android:fontFamily">@font/cc_pragmatica_regular</item>
        <item name="fontFamily">@font/cc_pragmatica_regular</item>
    </style>

    <style name="EdTxtPhone" parent="EdTxtRegular">
        <item name="android:inputType">phone</item>
        <item name="android:maxLength">11</item>
        <item name="android:digits">0123456789+</item>
    </style>

    <style name="BtnSingle" parent="TxtMedium">
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:stateListAnimator">@animator/button_active_state_animator</item>
    </style>

    <style name="BtnRegularPrimary" parent="TxtMedium">
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/rounded_button</item>
        <item name="backgroundTint">@color/btn_primary_color</item>
        <item name="android:backgroundTint">@color/btn_primary_color</item>
        <item name="android:stateListAnimator">@animator/button_click_state_animator</item>
    </style>

    <style name="BtnRegularSecondary" parent="TxtMedium">
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/rounded_button</item>
        <item name="backgroundTint">@color/btn_secondary_color</item>
        <item name="android:backgroundTint">@color/btn_secondary_color</item>
        <item name="android:stateListAnimator">@animator/button_click_state_animator</item>
    </style>

    <style name="CustomBottomSheetDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheet</item>
    </style>

    <style name="CustomBottomSheet" parent="Widget.MaterialComponents.BottomSheet">
        <item name="shapeAppearanceOverlay">@style/CustomShapeAppearanceBottomSheetDialog</item>
    </style>

    <style name="CustomShapeAppearanceBottomSheetDialog">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">@dimen/offset_16</item>
        <item name="cornerSizeTopLeft">@dimen/offset_16</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="backgroundColor">@color/white_40</item>
    </style>
</resources>
