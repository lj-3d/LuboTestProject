<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:gravity="center"
        android:layout_weight="1">

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txtDigitCell"
            android:layout_width="@dimen/sms_cell_width"
            android:layout_height="@dimen/sms_cell_height"
            android:textCursorDrawable="@color/secondary_orange"
            android:gravity="center"
            android:textSize="@dimen/txt_size_16"
            android:textColor="@color/white"
            android:background="@drawable/rounded_sms_cell"
            android:padding="@dimen/offset_6" />
</LinearLayout>